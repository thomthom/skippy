{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "rake test FILE",
      "type": "shell",
      "command": "bundle",
      "args": [
        "exec",
        "rake",
        "TEST=${relativeFile}"
      ],
      "group": "test"
    },
    {
      "label": "rake test bundler_project_test",
      "type": "shell",
      "command": "bundle",
      "args": [
        "exec",
        "rake",
        "TEST=test/bundler_project_test.rb"
      ],
      "group": "test"
    }
  ]
}
